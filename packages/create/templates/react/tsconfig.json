{  
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "module": "preserve",
    "noEmit": true,
    "experimentalDecorators": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "types": ["node"],
    "jsx": "react"
  },
  "include": ["./globals.d.ts", "src"]
}
