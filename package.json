{
  "name": "flux-monorepo",
  "version": "0.8.1",
  "workspaces": {
    "packages": [
      "packages/**/*",
      "views/**/*",
      "app",
      "docs"
    ],
    "nohoist": [
      "**/electron",
      "**/electron/**",
      "**/electron-squirrel-startup",
      "**/electron-squirrel-startup/**",
      "**/@electron-forge",
      "**/@electron-forge/**"
    ]
  },
  "scripts": {
    "build": "turbo run build --concurrency=1",
    "dev": "turbo run dev --parallel",
    "publish-package": "turbo run publish-package",
    "lint": "turbo run lint",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "patch-package": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "resolutions": {
    "@coasys/ad4m": "file:../ad4m/core",
    "@coasys/ad4m-connect": "file:../ad4m/connect",
    "@coasys/ad4m-vue-hooks": "file:../ad4m/ad4m-hooks/vue",
    "@coasys/ad4m-react-hooks": "file:../ad4m/ad4m-hooks/react"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "private": true,
  "dependencies": {
    "graphql": "^15.7.2"
  },
  "packageManager": "yarn@1.22.1"
}
