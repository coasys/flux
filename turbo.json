{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build:ui",
        "^build:packages",
        "^build:views",
        "^build:app"
      ],
      "outputs": ["dist/**"]
    },
    "build:ui": {
      "dependsOn": [],
      "outputs": ["packages/ui/dist/**"]
    },
    "build:packages": {
      "dependsOn": ["^build"],
      "outputs": ["packages/*/dist/**"]
    },
    "build:views": {
      "dependsOn": ["build:packages"],
      "outputs": ["views/**/dist/**"]
    },
    "build:app": {
      "dependsOn": ["build:views"],
      "outputs": ["app/dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "publish-package": {}
  }
}
